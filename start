#!/bin/sh

pkill chatserver
pkill server35
sleep 0.2

# Chatserver needs to run first
echo chatserver
./chatserver >/dev/null &
sleep 0.2

# Start all the areas
./server35 -a 1 -d # Cameron
sleep 0.2
./server35 -a 2 -d # Below Aston
sleep 0.2
./server35 -a 3 -d # Aston
sleep 0.2
./server35 -a 4 -d # Earth Pents
sleep 0.2
./server35 -a 5 -d # Aston Sewers
sleep 0.2
./server35 -a 6 -d # Earth Underground
sleep 0.2
./server35 -a 7 -d # Fire Pents
sleep 0.2
./server35 -a 8 -d # Fire Underground
sleep 0.2
./server35 -a 9 -d # Ice Pents
sleep 0.2
./server35 -a 10 -d # Ice Underground
sleep 0.2
./server35 -a 11 -d # Ice Palace
sleep 0.2
./server35 -a 12 -d # Mines
sleep 0.2
./server35 -a 13 -d # Clan Halls
sleep 0.2
./server35 -a 14 -d # Random Dungeons
sleep 0.2
./server35 -a 15 -d # Swamps
sleep 0.2
./server35 -a 16 -d # Exkordon Forest
sleep 0.2
./server35 -a 17 -d # Exkordon
sleep 0.2
./server35 -a 18 -d # Bone Tower
sleep 0.2
./server35 -a 19 -d # Nomad Plains
sleep 0.2
#20-21 empty
./server35 -a 22 -d # Labs
sleep 0.2
./server35 -a 23 -d # Ice Army Caves 1
sleep 0.2
./server35 -a 24 -d # Ice Army Caves 2
sleep 0.2
./server35 -a 25 -d # Rodney's Warped World
sleep 0.2
./server35 -a 26 -d # Below Aston 2
sleep 0.2
#27 empty
./server35 -a 28 -d # Brannington Forest + Robbers
sleep 0.2
./server35 -a 29 -d # Brannington
sleep 0.2
./server35 -a 30 -d # Clan Spawners
sleep 0.2
#31-32 empty
./server35 -a 33 -d # Long Tunnels
sleep 0.2
#34-35 empty
./server35 -a 36 -d # Caligar
sleep 0.2
./server35 -a 37 -d # Arkhata
sleep 0.2

echo Done

# You can probably remove all the sleep commands, I prefer to stagger stuff to avoid
# stutters on other services running on the same host
